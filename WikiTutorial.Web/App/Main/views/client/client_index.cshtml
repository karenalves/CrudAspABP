@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="row clearfix" ng-controller="app.views.client.client_index as vm">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card main-content">
                <div class="header">
                    <h2>
                        @L("Client")
                    </h2>
                    <div class="body table-responsive">
                        <!-- ******************************************************** -->
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>@L("Name")</th>
                                    <th>@L("LastName")</th>
                                    <th>@L("Cpf")</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="clien in vm.cliente">
                                    <td class="td--1">{{clien.name}}</td>
                                    <td class="td--2">{{clien.lastName}}</td>
                                    <td class="td--3">{{clien.cpf}}</td>
                                    <td class="td--4">
                                        <div class="pull-right">
                                            <button class="btn bg-primary text-white overdue"
                                                    ng-click="vm.editCliente(clien)">
                                                <span class="fa fa-edit text-white">&nbsp;</span>@L("Edit")
                                            </button>
                                            <button class="btn bg-secondary text-white overdue"
                                                    ng-click="vm.delete(clien)">
                                                <span class="fa fa-trash text-white">&nbsp;</span>@L("Delete")
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- ******************************************************** -->
                        <div class="col-lg-12">
                            <div class="pull-right">
                                <button class="btn bg-primary text-white overdue"
                                        ng-click="vm.createCliente()">
                                    <span class="fa fa-plus text-white">&nbsp;</span>@L("CreateNewCliente")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

